<%- include ("../partials/header") %> 

<h1 class="mb-5 text-center">Completed Consultations</h1>


<div class="row animated fadeIn fast">
    <% consultation.forEach(function(consult){ %>
        <div class="col-md-4">
            <div class="card border-dark mb-3" style="border-radius: 10px; box-shadow: 0px 0px 10px 0px #000;">
                <div class="card-header"><strong>Patient: </strong> <%= consult.patientName %></div>
                <div class="card-body">
                    <p class="card-text"><strong>Illness:</strong>  <%= consult.illnessHistory %></p>
                     <% if(consult.status) { %>
                        <p class="card-text"><strong>Status:</strong>  Completed</p>
                     <% } else { %>
                        <p class="card-text"><strong>Status:</strong>  Incomplete</p>
                     <% } %>
                    <p class="card-text"><strong>Transaction ID:</strong>  <%= consult.transactionID %></p>
                    <p class="card-text"><strong>Care to be taken: </strong></p>
                     <% consult.careToBeTaken.forEach((c) => { %>
                        <p class="card-text">> <%= c %></p>
                     <% }) %>
                    <p class="card-text"><strong>Medicines: </strong></p>
                     <% consult.medicines.forEach((m) => { %>
                        <p class="card-text">> <%= m %></p>
                     <% }) %>
                    <a href="/doctors/completedconsultations/<%= consult._id %>/update" class="btn btn-warning btn-block">Update</a>
                    <a href="/doctors/completedconsultations/<%= consult._id %>/viewpdf" target="_blank" class="btn btn-success btn-block">View PDF</a>
                </div>
            </div>
        </div>
    <% }); %> 
</div>
<div class="mt-3">
    <a href="/doctors/index"><i class="fas fa-angle-left"></i>&nbsp; Back Home</a>
</div>

<%- include ("../partials/footer") %> 