
<%- include ("../partials/header") %>

<div class="row profilecard">
    <div class="col-md-6 profileinfo">
        <div class="">
            <h2 class="mb-5 text-center">Dr. <%= doctor.name %>'s Profile</h2>
            <h4 class="mb-4"><strong>Email: </strong><%= doctor.email %></h4>
            <h4 class="mb-4"><strong>Speciality: </strong><%= doctor.speciality %></h4>
            <h4 class="mb-4"><strong>Contact Number: </strong>+91-<%= doctor.phoneNumber %></h4>
            <h4 class="mb-4"><strong>Experience </strong><%- doctor.experience %> years</h4>
        </div>
    </div>
    <div class="col-md-6 m-auto text-center">
        <div class="ml-5">
            <img src="/uploads/doctors/<%= doctor.profilePicture %>" class="profilepic text-center rounded-circle" alt="">
            <!-- <h2 class="mt-2"><strong>Profile Picture</strong></h2> -->
        </div>
    </div>
</div>
<hr class="profilehr">
<div class="row mt-3 mb-4">
    <div class="col-md-4">
        <a href="/doctors/profile/<%= currentUser._id %>/update" class="btn btn-warning btn-lg btn-block mt-3">Update Profile</a>
    </div>
    <div class="col-md-4">
        <a href="/doctors/profile/<%= currentUser._id %>/changepassword" class="btn btn-info btn-lg btn-block mt-3">Change Password</a>
    </div>
    <div class="col-md-4">
        <a href="#" class="btn btn-danger btn-lg btn-block mt-3">Delete Profile</a>
    </div>
</div>
<hr class="profilehr">
<a href="/doctors/index"><i class="fas fa-angle-left"></i>&nbsp; Back</a>

<%- include ("../partials/footer") %> 