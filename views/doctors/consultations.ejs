<%- include ("../partials/header") %> 

<h1 class="mb-5 text-center">New Consultations</h1>


<div class="row animated fadeIn fast">
    <% consultation.forEach(function(consult){ %>
        <div class="col-md-4">
            <div class="card border-dark mb-3" style="border-radius: 10px; box-shadow: 0px 0px 10px 0px #000;">
                <div class="card-header"><strong>Patient: </strong> <%= consult.patientName %></div>
                <div class="card-body">
                    <p class="card-text"><strong>Illness:</strong>  <%= consult.illnessHistory %></p>
                     <% if(consult.status) { %>
                        <p class="card-text"><strong>Status:</strong>  Completed</p>
                     <% } else { %>
                        <p class="card-text"><strong>Status:</strong>  Incomplete</p>
                     <% } %>
                    <p class="card-text"><strong>Transaction ID:</strong>  <%= consult.transactionID %></p>
                    <a href="/doctors/consultations/<%= consult._id %>/consult" class="btn btn-primary btn-block">Consult</a>
                </div>
            </div>
        </div>
    <% }); %> 
</div>
<div class="mt-3">
    <a href="/doctors/index"> <i class="fas fa-angle-left"></i>&nbsp; Back</a>
</div>

<%- include ("../partials/footer") %> 
