<%- include ("../partials/header") %>
<div class="row profilecard">
    <div class="col-md-6 profileinfo">
        <div class="">
            <h2 class="mb-5 text-center"><%= patient.name %>'s Profile</h2>
            <h4 class="mb-4"><strong>Email: </strong><%= patient.email %></h4>
            <h4 class="mb-4"><strong>Age: </strong><%= patient.age %></h4>
            <h4 class="mb-4"><strong>Contact Number: </strong><%= patient.phoneNumber %></h4>
            <h4 class="mb-4"><strong>History of surgery: </strong><%- patient.historySurgery %></h4>
            <h4 class="mb-4"><strong>History of illness: </strong><%- patient.historyIllness %></h4>
        </div>
    </div>
    <div class="col-md-6 m-auto text-center">
        <div class="ml-5">
            <img src="/uploads/patients/<%= patient.profilePicture %>" class="profilepic text-center rounded-circle" alt="">
            <!-- <h2 class="mt-5"><strong>Profile Picture</strong></h2> -->
        </div>
    </div>
</div>
<hr class="profilehr">
<div class="row mt-3 mb-4">
    <div class="col-md-4">
        <a href="/patients/profile/<%= currentUser._id %>/update" class="btn btn-warning btn-lg btn-block mt-3">Update Profile</a>
    </div>
    <div class="col-md-4">
        <a href="/patients/profile/<%= currentUser._id %>/changepassword" class="btn btn-info btn-lg btn-block mt-3">Change Password</a>
    </div>
    <div class="col-md-4">
        <a href="#" class="btn btn-danger btn-lg btn-block mt-3">Delete Profile</a>
    </div>
</div>
<hr class="profilehr">
<a href="/patients/index"><i class="fas fa-angle-left"></i>&nbsp; Back</a>
<%- include ("../partials/footer") %> 