<%- include ("../partials/header") %> 

<h1 class="mb-5 text-center">Consultations</h1>
<div class="row animated fadeIn fast">
    <% patient.consultations.forEach((consult) =>{ %>
        <div class="col-md-4">
            <div class="card border-dark mb-3" style="border-radius: 10px; box-shadow: 0px 0px 10px 0px #000;">
                <div class="card-header">Doctor: <%= consult.doctorName %></div>
                <div class="card-body">
                    <p class="card-text">Patient: <%= consult.patientName %></p>
                    <p class="card-text">Illness: <%= consult.illnessHistory %></p>
                    <p class="card-text">Transaction ID: <%= consult.transactionID %></p>
                    <% if(consult.status) { %>
                    <p class="card-text">Status: Completed</p>
                    <a href="/patients/completedconsultations/<%= consult._id %>/viewpdf" target="_blank" class="btn btn-primary btn-block">View Prescription</a>
                    <% } else { %>
                    <p class="card-text">Status: Incomplete</p>
                    <% } %>
                </div>
            </div>
        </div>
    <% }); %> 
</div>
<div class="mt-3">
    <a href="/patients/index"><i class="fas fa-angle-left"></i>&nbsp; Back Home</a>
</div>


<%- include ("../partials/footer") %> 
