<%- include ("../partials/header") %> 
<div class="row h-200">
    <div class="col-md-4 mx-auto my-auto">
        <form action="/patients/signin" method="POST" class="form-container animated fadeIn fast">
            <h1 style="text-align: center">PATIENT'S LOGIN</h1>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email" name="username">
            </div>
            <div class="input-group mb-3">
                <input type="password" name="password" class="form-control" id="changep"  placeholder="Password" required>
                <div class="input-group-append">
                    <span class="input-group-text" id="eyep"><i class="far fa-eye" id="iconp" ></i></span>
                </div>
            </div>
            <button type="submit" class="btn btn-block btn-primary">Login &nbsp; <i class="fas fa-sign-in-alt"></i></button>
            <div class="mt-3">
                <a href="/"><i class="fas fa-angle-left"></i>&nbsp; Back</a>
            </div>
        </form>
    </div>
</div>

